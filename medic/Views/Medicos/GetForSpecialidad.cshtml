@model IEnumerable<medic.Data.Model.Medico>

@{
    ViewData["Title"] = "GetForSpecialidad";
}


<script src="~/js/Pacientes.js"></script>

<div class="container">
    <div class="row">
        <p><h1 class="text-center">Nuestros profesionales</h1></p>
        <br />
        <div class="col-md-10 col-md-offset-1">
            <div class="panel panel-default panel-table">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col col-xs-6">
                            <form action="#" method="get">
                                <div class="input-group">
                                    <!-- USE TWITTER TYPEAHEAD JSON WITH API TO SEARCH -->
                                    <input class="form-control" id="system-search" name="q" placeholder="Buscar" required>
                                    <span class="input-group-btn">
                                        <button type="submit" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
                                    </span>
                                    <span class="input-group-btn">
                                        <button type="button" class="btn btn-default" onclick='limpiar()'>Limpiar</button>
                                    </span>
                                </div>
                            </form>
                        </div>
                        <div class="col col-xs-6 text-right">
                           
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered  table-list-search">
                        <thead>
                            <tr>


                                <th>
                                    @Html.DisplayNameFor(model => model.Nombre)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Especialidad)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Matricula)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Telefono)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Direccion)
                                </th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {

                            <tr>

                                    <td align="center">
                                        <a class=" btn btn-default" asp-controller="PetitionsPatient" asp-action="CreatePetition" asp-route-idMedico="@item.MedicoID"><em class="fa fa-info">Solicitar turno</em></a>
                                        <a class="disabled btn btn-default" asp-action="Edit"><em class="fa fa-pencil"></em></a>
                                        <a class="disabled btn btn-danger" asp-action="Delete"><em class="fa fa-trash"></em></a>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Nombre)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Especialidad)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Matricula)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Telefono)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Direccion)
                                </td>

                                

                            </tr>
                            }

                        </tbody>
                    </table>

                </div>
                <div class="panel-footer">

                </div>
            </div>
        </div>
    </div>
</div>