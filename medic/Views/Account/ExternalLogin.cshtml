@model ExternalLoginViewModel
@{
    ViewData["Title"] = "Register";
}

<h2>Registro</h2>
<h4>Asociá tu cueta de @ViewData["LoginProvider"].</h4>
<hr />

<p class="text-info">
    Fuiste correctamente autenticado con <strong>@ViewData["LoginProvider"]</strong>.
    Confirmá tu Email y tu nombre de usuario para poder loguearte.
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-action="ExternalLoginConfirmation" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>

                <label asp-for="Name">Nombre de usuario</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
                <br />
                <label asp-for="Usuario" class="control-label"></label>
                <select asp-for="Usuario" asp-items="Html.GetEnumSelectList<ApplicationUser.Tipo>()" asp-class="form-control"></select>
                <span asp-validation-for="Usuario" class="text-danger"></span>

            </div>
            <button type="submit" class="btn btn-default">Registrarte</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
