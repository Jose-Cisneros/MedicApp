@model IEnumerable<medic.Data.Model.Consulta>

@{
    ViewData["Title"] = "Index";
}

<h2>Todas las consultas</h2>

<p>
    <a asp-action="Create">Crear nueva</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Observacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paciente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paciente.DNI)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Observacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paciente.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paciente.DNI)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ConsultaID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ConsultaID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ConsultaID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
