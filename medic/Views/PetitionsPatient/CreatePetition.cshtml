@model medic.Data.Model.PeticionPacienteAMedico

@{
    ViewData["Title"] = "CreatePetition";
}

<h2>Solicitar turno</h2>

<h4>Paciente a medico</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreatePetition">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group hidden">
                <label asp-for="MedicoID" class="control-label"></label>
                <input asp-for="MedicoID" class ="form-control" asp-items="ViewBag.MedicoID"></input>
            </div>
            
                <b>Medico:</b>
                @Model.MedicoNombre
        
            <div class="form-group">
                <label asp-for="Fecha" class="control-label">Seleccione fecha:</label>
                <input asp-for="Fecha" class="form-control" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
