@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_layoutMenu.cshtml";
}


<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
<style>
    .texto_grande {
        font-size: 2.5rem;
        color: white;
    }

    #icone_grande {
        font-size: 8rem;
        color: #fff;
    }
</style>

<h2 class="text-center">Menú de medico</h2>
<br />
<div class="container">
    <div class="col-md-4">
        <a class="btn btn-block btn-lg btn-success" asp-controller="Calendar" asp-action="Index">
            <i class="fa fa-calendar" id="icone_grande"></i> <br><br>
            <span class="texto_grande"><i class="fa fa-list-alt"></i> Calendario</span>
        </a>
        <br />
    </div>
    <div class="col-md-4">
        <a class="btn btn-block btn-lg btn-primary" asp-controller="Consultas" asp-action="Index">
            <i class="fa fa-user-md" id="icone_grande"></i> <br><br>
            <span class="texto_grande"><i class="fa fa-list-ul"></i> Consultas</span>
        </a>
        <br />
    </div>
    <div class="col-md-4">
        <a class="btn btn-block btn-lg btn-info" asp-controller="Pacientes" asp-action="Index">
            <i class="fa fa-users" id="icone_grande"></i> <br><br>
            <span class="texto_grande"><i class="fa fa-plus-circle"></i> Pacientes</span>
        </a>
        <br />
    </div>

</div>

<script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"></script>




<script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"></script>



<script type="text/javascript">

    function respuestaCantidad() {


            let cantidad = ` `


          $.get('@Url.Action("NotificationsQuantity", "Medicos")', function (resp) {

            console.log(resp)

            if (resp > 0) {

                cantidad += ` <span class="notificacion">${resp}</span> `;
                document.querySelector(".notificaciones").innerHTML += cantidad;


            }
            else {
                console.log("No entra al if")
            }

        })
    }



    respuestaCantidad();
</script>


