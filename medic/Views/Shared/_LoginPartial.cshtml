@using Microsoft.AspNetCore.Identity
@using medic.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <style>
        .navbar {
            background-color: #00ad5f !important;
        }

        a span {
            color: white;
        }

        #color {
            color: white;
        }

        .notificacion {
            background-color: red;
            width: fit-content;
            padding: 5px;
            border-radius: 5px;
        }
    </style>

    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a id="color" asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Buenas @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <a id="color" class="notificaciones" asp-controller="Medicos" asp-action="GetNotificaciones">Notificaciones </a>


            </li>
            <li>
                <button type="submit" id="color" class="btn btn-link navbar-btn navbar-link">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register"><span>Register</span></a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login"><span>Log In</span> </a></li>
    </ul>
}
