@model IEnumerable<medic.Data.Model.Paciente>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutPacientes.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css" rel='stylesheet' type='text/css'>
<link href="~/css/PacienteStyleSheet.css" rel="stylesheet" type="text/css" />

<br />
<div class="container">
    <div class="row">

        <div class="col-md-10 col-md-offset-1">
            <div class="panel panel-default panel-table">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col col-xs-6">
                            <h3 class="panel-title">Pacientes</h3>
                        </div>
                        <div class="col col-xs-6 text-right">
                            <a  class="btn btn-sm btn-primary btn-create" asp-action="Create">Nuevo Paciente</a>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered table-list">
                        <thead>
                            <tr>


                                <th>
                                    @Html.DisplayNameFor(model => model.Nombre)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.DNI)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Telefono)
                                </th>

                                <th><em class="fa fa-cog" ></em></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                @foreach (var item in Model)
    {




                            <td>
                                @Html.DisplayFor(modelItem => item.Nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DNI)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Telefono)
                            </td>

                            <td align="center">
                                <a class="btn btn-default" asp-action="Details" asp-route-id="@item.PacienteID"><em class="fa fa-info"></em></a>
                                <a class="btn btn-default" asp-action="Edit" asp-route-id="@item.PacienteID"><em class="fa fa-pencil"></em></a>
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.PacienteID"><em class="fa fa-trash"></em></a>

                            </td>


}
                            </tr>
                        </tbody>
                    </table>

                </div>
                <div class="panel-footer">

                </div>
            </div>
        </div>
    </div>
</div>

